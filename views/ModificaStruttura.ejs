                </div>
            </div>

            <nav class="navbar navbar-expand-sm bg-dark navbar-dark w-100">
                <a class="navbar-brand text-success text-uppercase" style="font-size: 2rem; font-style: oblique; font-weight: bold;" href="/home"><img src='immagini/favicon.ico' class="rounded">  Click&Trip</a>
                <div class="mt-2 col-md-3 offset-xl-7 offset-lg-6 offset-md-4">
                    <p class="text text-uppercase text-success text-center mx-2 "><%=Account.Nome%> <%=Account.Cognome%> <img src=<%=Account.Foto_account%> class="rounded-circle img-thumbnail" style="width: 64px; height: 64px;"></p>   
                </div>
            </nav>
            <div id="message" data-message="<%=message%>" hidden>

            </div>
   
            <div class="jumbotron bg-white col-md-5 col-sm-5">
                <h1 class="display-4 text-left">Ciao <%=Account.Nome%>,<br> questa è la tua struttura!</h1>
                <p class="lead text-left">Ecco i dati della tua Struttura</p>
                
                <table class="table">
                    <body>
                        <tr>
                            <td class="text-left">Foto Struttura </td>
                            <td><img style="width: 180px; height: 180px;" src=<%=Struttura.Foto_struttura%> class="rounded mx-auto d-block img-responsive" alt="Foto Struttura"></td>
                        </tr>
                        <tr>
                            <td class="text-left">Nome Struttura </td>
                            <td class="text-left"><%=Struttura.NomeStruttura%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Tipo Struttura </td>
                        <td class="text-left"><% if (Struttura.TipoStruttura==1){%> Casa Vacanza <%} else {%> B&B <%}%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Località </td>
                            <td class="text-left"><%=Struttura.Località%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Indirizzo </td>
                            <td class="text-left"><%=Struttura.Indirizzo%></td>
                        </tr>
                        <%if(Struttura.TipoStruttura==0){%> 
                        <tr>
                            <td class="text-left">Numero Singole disponibili </td>
                            <td class="text-left"><%=Struttura.NSingole%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Prezzo Camere Singole  </td>
                            <td class="text-left"><%=Struttura.PrezzoS%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Numero Doppie disponibili </td>
                            <td class="text-left"><%=Struttura.NDoppie%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Prezzo Camere Doppie </td>
                            <td class="text-left"><%=Struttura.PrezzoD%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Numero Triple disponibili </td>
                            <td class="text-left"><%=Struttura.NTriple%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Prezzo Camere Triple </td>
                            <td class="text-left"><%=Struttura.PrezzoT%></td>
                        </tr>
                        <%} else {%> 
                        <tr>
                            <td class="text-left">Prezzo per notte </td>
                            <td class="text-left"><%=Struttura.Prezzo%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Numero posti letto </td>
                            <td class="text-left"><%=Struttura.NPostiLetto%></td>
                        </tr>
                    <%}%>
                        <tr>
                            <td class="text-left">Tassa di soggiorno </td>
                            <td class="text-left"><%=Struttura.TassaSoggiorno%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Descrizione </td>
                            <td class="text-left"><%=Struttura.Descrizione%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Wi-fi </td>
                        <td class="text-left"><% if (Struttura.Wifi==1){%>Si<%}else {%> No <%}%> </td>
                        </tr>
                        <tr>
                            <td class="text-left">Parcheggio </td>
                        <td class="text-left"><% if (Struttura.Parcheggio==1){%>Si<%}else {%> No <%}%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Aria condizionata </td>
                        <td class="text-left"><% if (Struttura.AriaCondizionata==1){%>Si<%}else {%> No <%}%></td>
                        </tr>
                        <tr>
                            <td class="text-left">Piscina </td>
                        <td class="text-left"><% if (Struttura.Piscina==1){%>Si<%}else {%> No <%}%></td>
                        </tr>
                    </body>
                </table>
            </div>


            <div class="container-fluid col-7">    
                
                    <p class="lead font-weight-bold text-uppercase mt-4 col-12">Modifica Struttura</p>
                    <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-5 col-sm-12 ml-2">
                        <input type="radio" class="custom-control-input" id="prezzo" name="tipo" onclick="mostraB()" value="prezzo">
                        <label class="custom-control-label" for="prezzo">Modifica prezzo</label> 
                    </div>
                    <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-5 col-sm-12 mx-2">
                        <input type="radio" class="custom-control-input" id="descrizione" name="tipo" onclick="mostraC()" value="descrizione">
                        <label class="custom-control-label mx-4" for="descrizione">Modifica descrizione</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-5 col-sm-12 mx-2">
                        <input type="radio" class="custom-control-input" id="foto" name="tipo" onclick="mostraA()" value="foto">
                        <label class="custom-control-label mx-4" for="foto">Modifica foto struttura</label>
                    </div>

                    <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-5 col-sm-12 mx-2">
                        <input type="radio" class="custom-control-input" id="comfort" name="tipo" onclick="mostraE()" value="comfort">
                        <label class="custom-control-label mx-4" for="comfort">Modifica Comfort</label>
                    </div>

                    <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-5 col-sm-12 mx-2">
                        <input type="radio" class="custom-control-input" id="rimuovi" name="tipo" onclick="mostraD()" value="rimuovi">
                        <label class="custom-control-label mx-4" for="rimuovi">Rimuovi struttura</label>
                    </div>
                    

                    <form id="form_modifica" method="POST">
                    <div id="tipoB" class="ml-1">
                        <p class="lead text-uppercase mt-4 col-12">Modifica prezzo</p>
                        <%if(Struttura.TipoStruttura==0) {%>
                        <div class="input-group mt-4 col-lg-6 col-sm-7">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Prezzo singola</span>
                            </div>
                            <input class="form-control" type="text" id="prezzo_s" name="prezzo_s" value=<%=Struttura.PrezzoS%>>
                            <div class="input-group-append">
                                <span class="input-group-text">€ per notte</span>
                            </div>
                        </div>

                        <div class="input-group mt-4 col-lg-6 col-sm-7">
                            
                            
                            <div class="input-group-prepend">
                                <span class="input-group-text">Prezzo doppia</span>
                            </div>
                            <input class="form-control" type="text" id="prezzo_d" name="prezzo_d" value=<%=Struttura.PrezzoD%>>
                            <div class="input-group-append">
                                <span class="input-group-text">€ per notte</span>
                            </div>
                        </div>

                        <div class="input-group mt-4 col-lg-6 col-sm-7">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Prezzo tripla</span>
                            </div>
                            <input class="form-control" type="text" id="prezzo_t" name="prezzo_t" value=<%=Struttura.PrezzoT%>>
                            <div class="input-group-append">
                                <span class="input-group-text">€ per notte</span>
                            </div>
                        </div>
                            <%} else {%>
                            
                            <div class="input-group mt-4 col-lg-6 col-sm-7">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Prezzo </span>
                            </div>
                            <input class="form-control" type="text" id="prezzo_s" name="prezzo" value=<%=Struttura.Prezzo%>>
                            <div class="input-group-append">
                                <span class="input-group-text">€ per notte</span>
                            </div>
                        </div>
                    
                        <%}%>

                        <div class="input-group mt-5 col-lg-7 col-sm-8">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Tassa di Soggiorno</span>
                            </div>
                            <input class="form-control" type="text" id="tassa_s" name="tassa_s" value=<%=Struttura.TassaSoggiorno%>>
                            <div class="input-group-append">
                                <span class="input-group-text">€ al giorno</span>
                            </div>
                        </div>
                        <div class="col-sm-6 offset-sm-2 p-1 my-5">
                            <button name="confermaB" id="confermaB" type="submit" class="btn btn-success btn-block" >Conferma</button>
                        </div>
                    </div>


                    <div id="tipoC" class="ml-1">
                        <p class="lead text-uppercase mt-4 col-12">Modifica descrizione</p>
                        <div class="input-group col-12 mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Descrizione</span>
                            </div>
                            <textarea class="form-control" rows="5" name="descrizione" placeholder="Modifica la descrizione testuale della tua struttura."><%=Struttura.Descrizione%></textarea>
                        </div>
                        <div class="col-sm-6 offset-sm-2 p-1 my-5">
                            <button name="confermaC" id="confermaC" type="submit" class="btn btn-success btn-block" >Conferma</button>
                        </div>
                
                    </div>

                
                    <div id="tipoA"  class="ml-1">                        
                        <p class="lead text-uppercase mt-5 col-12">Aggiorna foto Struttura</p>
                        <div class="custom-file mt-4">
                            <input type="file" class="custom-file-input" name="foto_s" id="foto_s"  >
                            <label class="custom-file-label" for="foto_s">Foto della struttura</label>
                        </div>
                        <div class="col-sm-6 offset-sm-2 p-1 my-5">
                            <button name="confermaA" id="confermaA" type="submit" class="btn btn-success btn-block">Conferma</button>
                        </div>
                    </div>

                    <div id="tipoE"  class="ml-1">                        
                        <p class="lead  text-uppercase mt-4 col-12">Modifica Comfort </p>
                        <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-5 col-sm-12 ml-2">
                        <input type="checkbox" class="custom-control-input" id="wifi" name="wifi" value="1" <%if(Struttura.Wifi==1){%> checked <%}%> >
                            <label class="custom-control-label" for="wifi">Wi-fi</label> 
                        </div>
                        <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-5 col-sm-12 ml-2">
                            <input type="checkbox" class="custom-control-input" id="piscina" name="piscina"  value="1" <% if (Struttura.Piscina==1){%> checked <%}%>>
                            <label class="custom-control-label" for="piscina">Piscina</label> 
                        </div>
                        <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-5 col-sm-12 ml-2">
                            <input type="checkbox" class="custom-control-input" id="parcheggio" name="parcheggio" value="1" <% if (Struttura.Parcheggio==1){%> checked <%}%>>
                            <label class="custom-control-label" for="parcheggio">Parcheggio</label> 
                        </div>
                        <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-5 col-sm-12 ml-2">
                            <input type="checkbox" class="custom-control-input" id="condizionata" name="condizionata" value="1"  <% if (Struttura.AriaCondizionata==1){%> checked<%}%>>
                            <label class="custom-control-label" for="condizionata">Aria Condizionata</label> 
                        </div>
                        <div class="col-sm-6 offset-sm-2 p-1 my-5">
                            <button name="confermaE" id="confermaE" type="submit" class="btn btn-success btn-block" >Conferma</button>
                        </div>
                    </div>
                    
                </form>
            

                
                    <div id="tipoD" class="row ml-1">
                        <form id="form_rimuovi" method="POST" action="/rimuoviStruttura">             
                        <p class="lead text-uppercase mt-5 col-12">Sei sicuro di voler eliminare la tua struttura dal sistema in maniera irreversibile?</p>

                        <div class="col-sm-6 offset-sm-2 p-1 my-5">
                            <button name="confermaD" id="confermaD" type="submit" class="btn btn-success btn-block" >Sì</button>
                        </div>
                    </form>
                    
                    <div class="col-sm-6 offset-sm-2 p-1 my-5">
                            <button  class="btn btn-success btn-block" onclick="reset()">No</button>
                        </div>
                    </div>
                    </div>
                
            </div>
            
                             
            
        </div>
        <div class="jumbotron text-center py-3 col-12" style="margin-bottom: 0;">
                
            <div class="col-12">
                <p class="lead">Contatti</p>
                <p><i class="fas fa-envelope"></i>
                    <a href="mailto:clikandtrip@gmail.com">clickandtrip@gmail.com</a>
                </p>
            </div>
            <p class="font-italic" style="font-size: 1.1rem;">&copy; Nicolò Ditta &copy; Marco Galbo &copy; Marco Stallone &copy; Fortunato Viola</p>
        </div>

    </div>   
 </body>

 <script>
     
    if(document.getElementById("message").dataset.message!= 0)
    {
        alert(document.getElementById("message").dataset.message);
    }
    
    selezionaprezzo=document.getElementById("tipoB");
    selezionadescr=document.getElementById("tipoC");
    selezionafoto=document.getElementById("tipoA");
    selezionarimuovi=document.getElementById("tipoD");
    selezionaComfort=document.getElementById("tipoE")
    form=document.getElementById("form_modifica");
    selezionaprezzo.setAttribute("hidden", "")
    
       function reset()
       {
           document.getElementById("rimuovi").checked=false;
           selezionarimuovi.setAttribute("hidden","");
           
       }

        function mostraB() {
            selezionaprezzo.removeAttribute("hidden");
            selezionadescr.setAttribute("hidden", "");
            selezionafoto.setAttribute("hidden", "");
            selezionarimuovi.setAttribute("hidden", "");
            selezionaComfort.setAttribute("hidden","");
            form.setAttribute("action","/modificaPrezzoStruttura");
        }

        selezionadescr.setAttribute("hidden", "")

          
        function mostraC() {
            selezionadescr.removeAttribute("hidden");
            selezionaprezzo.setAttribute("hidden", "");
            selezionafoto.setAttribute("hidden", "");
            selezionarimuovi.setAttribute("hidden", "");
            selezionaComfort.setAttribute("hidden","");
            form.setAttribute("action","/modificaDescrizioneStruttura");
        }
        selezionafoto.setAttribute("hidden", "")

          
        function mostraA() {
            selezionafoto.removeAttribute("hidden");
            selezionarimuovi.setAttribute("hidden", "");
            selezionadescr.setAttribute("hidden", "");
            selezionaprezzo.setAttribute("hidden", "");
            selezionaComfort.setAttribute("hidden","");
            form.setAttribute("action","/modificaFotoStruttura");
            form.setAttribute("enctype","multipart/form-data");
        }
        selezionarimuovi.setAttribute("hidden", "")

       

        function mostraD() {
            selezionarimuovi.removeAttribute("hidden");
            selezionafoto.setAttribute("hidden", "");
            selezionadescr.setAttribute("hidden", "");
            selezionaprezzo.setAttribute("hidden", "");
            selezionaComfort.setAttribute("hidden","");
        }    

        selezionaComfort.setAttribute("hidden", "")

        function mostraE()
       {
        selezionaComfort.removeAttribute("hidden");
        
            selezionadescr.setAttribute("hidden", "");
            selezionafoto.setAttribute("hidden", "");
            selezionarimuovi.setAttribute("hidden", "");
            selezionaprezzo.setAttribute("hidden", "");
            form.setAttribute("action","/modificaComfortStruttura");
       }
 </script>

<html>