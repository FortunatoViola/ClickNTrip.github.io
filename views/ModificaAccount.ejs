    </head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div id="header" class="carousel slide carousel-fade" data-ride="carousel" data-pause="false" data-interval="4000">
                    
                <div class="carousel-inamner">
                    <div class="carousel-item active">
                        <img src="immagini/cefalù.jpg" class="w-100" alt="Cefalù">
                    </div>
                    <div class="carousel-item">
                        <img src="immagini/PiazzaPoliteama_2048x300.jpg" class="w-100" alt="Piazza Politeama">
                    </div>
                    <div class="carousel-item">
                        <img src="immagini/Sicily_Italy_Coast_Houses_Boats_Sea_Scopello_Crag_518296_1920x1080_2048x300.jpg" class="w-100" alt="Faraglioni Scopello">
                    </div>
                    <div class="carousel-item">
                        <img src="immagini/sentiero-di-monte-monaco-san-vito-lo-capo_2048x300.jpg" class="w-100" alt="San Vito">
                    </div>
                    <div class="carousel-item">
                        <img src="immagini/PalermoMONDELLO_2048x300.jpg" class="w-100" alt="Mondello">
                    </div>
                    <div class="carousel-item">
                        <img src="immagini/geraci.jpeg" class="w-100" alt="Vista Geraci">
                    </div>
                    <div class="carousel-item">
                        <img src="immagini/cefalù (1).jpg" class="w-100" alt="cefalù2">
                    </div>
                    <div class="carousel-item">
                        <img src="immagini/Taormina.jpg" class="w-100" alt="taormina">
                    </div>
                    <div class="carousel-item">
                        <img src="immagini/panorama.jpg" class="w-100" alt="panorama">
                    </div><div class="carousel-item">
                        <img src="immagini/NAVE.jpg" class="w-100" alt="barche">
                    </div>
                    
                    <a class="carousel-control-prev" href="#header" data-slide-to="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#header" data-slide-to="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>  
            </div>

            <nav class="navbar navbar-expand-sm bg-dark navbar-dark w-100">
                <a class="navbar-brand text-success text-uppercase" style="font-size: 2rem; font-style: oblique; font-weight: bold;" href="/home"><img src='immagini/favicon.ico' class="rounded">  Click&Trip</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="mt-2 offset-xl-7 offset-lg-6 offset-md-4">
                    <p class="text text-uppercase text-success text-center mx-2 "><%= Account.Nome %> <%= Account.Cognome %> <img src=<%=Account.Foto_account%> class="rounded-circle img-thumbnail" style="width: 64px; height: 64px;"></p>   
                </div>
            </nav>
            <div id="message" data-message="<%=message%>" hidden>

            </div>
            
            
            <div class="jumbotron bg-white col-md-4 col-sm-5 offset-xl-1">
                <h1 class="display-4 text-left">Ciao <%= Account.Nome %>,<br> è bello vederti qui!</h1>
                <p class="lead text-left">Ecco i tuoi dati personali</p>
                
                <table class="table">
                    <body>
                        <tr>
                            <td class="text-left">Foto Profilo </td>
                            <td><img style="width: 180px; height: 180px;" src=<%=Account.Foto_account%> class="rounded mx-auto d-block img-responsive" alt="Foto Personale"></td>
                        </tr>
                        <tr>
                            <td class="text-left">Nome Utente </td>
                            <td class="text-left"><%= Account.Nome %></td>
                        </tr>
                        <tr>
                            <td class="text-left">Data di nascita </td>
                            <td class="text-left"><%=Account.DataNascita%></td>
                        </tr>
                        <tr>
                            <td class="text-left">E-mail </td>
                            <td class="text-left"><%= Account.Email %></td>
                        </tr>
                    </body>
                </table>
            </div>
        <form class="col-6 mt-5" id="form" method="POST" >
            <p class="lead text-uppercase mt-4 col-12">Modifica Account</p>
            <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-5 col-sm-12 ml-2">
                <input type="radio" class="custom-control-input"  name="tipo" id="tipo1" onclick="changeForm1()" value="password" required>
                <label class="custom-control-label" for="tipo1">Modifica password</label> 
            </div>
            <div class="custom-control custom-radio custom-control-inline col-lg-2 col-md-6 col-sm-12 mx-2">
                <input type="radio" class="custom-control-input"  name="tipo" id="tipo2" onclick="changeForm2()" value="email" required>
                <label class="custom-control-label mx-4" for="tipo2" >Modifica e-mail</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline col-lg-3 col-md-6 col-sm-12 mx-2">
                <input type="radio" class="custom-control-input"  name="tipo"  id="tipo3" onclick="changeForm3()" value="foto" required>
                <label class="custom-control-label mx-4" for="tipo3" >Modifica foto</label>
            </div>
            
            <div id="tipoB" class="row ml-1">
                <p class="lead text-uppercase mt-4 col-12">Modifica password</p>
                <div class="input-group mt-4 col-lg-6 col-sm-12 ">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Vecchia password</span>
                    </div>
                    <input class="form-control" type="password" id="vecchia_password" name="vecchiapassword">
                </div>
                <div class="input-group mt-4 col-lg-6 col-sm-12">
                    <div class="input-group-prepend">
                        <span class="input-group-text ">Nuova password</span>
                    </div>
                    <input class="form-control" type="password" id="nuova_password" name="nuova_password">
                </div>

                <div class="input-group mt-4 col-lg-6 col-sm-12">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Conferma password</span>
                    </div>
                    <input class="form-control" type="password" id="conferma_password" name="confermapassword" onchange="checkPass(this)">
                </div>
            </div>


            <div id="tipoC" class="row ml-1">
                <p class="lead text-uppercase mt-4 col-12">Modifica e-mail</p>
                <div class="input-group mt-4 col-lg-6 col-sm-12">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Nuova e-mail</span>
                    </div>
                    <input class="form-control" type="email" id="nuova_email" name="nuovaemail">
                </div>
                <div class="input-group mt-4 col-lg-6 col-sm-12">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Password</span>
                    </div>
                    <input class="form-control" type="password" id="password" name="password" >
                </div>
            </div>


            <div id="tipoD" class="row ml-1">                        
                <p class="lead text-uppercase mt-5 col-12">Aggiorna foto profilo</p>
                <div class="custom-file mt-4">
                    <input type="file" class="custom-file-input" name="foto_utente" id="foto_utente">
                    <label class="custom-file-label" for="foto_utente">Seleziona nuova foto profilo</label>
                </div>
            </div>
            <div class="col-sm-6 offset-sm-2 p-1 my-5">
                <button name="conferma" id="conferma" type="submit" class="btn btn-success btn-block" >Conferma</button>
            </div>

        </form>
                             
            <div class="jumbotron text-center py-3 col-12" style="margin-bottom: 0;">
                
                <div class="col-12">
                    <p class="lead">Contatti</p>
                    <p><i class="fas fa-envelope"></i>
                        <a href="mailto:clikandtrip@gmail.com">clickandtrip@gmail.com</a>
                    </p>
                </div>
                <p class="font-italic" style="font-size: 1.1rem;">&copy; Nicolò Ditta &copy; Marco Galbo &copy; Marco Stallone &copy; Fortunato Viola</p>
            </div>
        </div>

    </div>   
</body>

<script>
    
    if(document.getElementById("message").dataset.message!= 0)
    {
        alert(document.getElementById("message").dataset.message);
    }
    
    selezionapassw=document.getElementById("tipoB");
    selezionaemail=document.getElementById("tipoC");
    selezionafoto=document.getElementById("tipoD");
    selezionapassw.setAttribute("hidden", "")
    selezionaemail.setAttribute("hidden", "")
    selezionafoto.setAttribute("hidden", "")

   var form=document.getElementById("form");
  
   
function checkPass(input)
{
    var pass=document.getElementById("nuova_password");
    if(input.value != pass)
    {
        alert("password non corrispondente");
        input.value=" ";
    }
}

   function changeForm1()
   {
        form.setAttribute("action","/change_password");
        selezionapassw.removeAttribute("hidden");
        selezionapassw.setAttribute("required","");
        selezionafoto.setAttribute("hidden", "");
        selezionafoto.removeAttribute("required");
        selezionaemail.setAttribute("hidden", "");
        selezionaemail.removeAttribute("required");

       
       
   }
   function changeForm2()
   {
       form.setAttribute("action","/change_email");
       selezionaemail.removeAttribute("hidden");
            selezionaemail.setAttribute("required","");
            selezionafoto.setAttribute("hidden", "");
            selezionafoto.removeAttribute("required");
            selezionapassw.setAttribute("hidden", "");
            selezionapassw.removeAttribute("required");
            selezionafoto.setAttribute("hidden", "");
            selezionafoto.removeAttribute("required");
   }
   function changeForm3()
   {
       form.setAttribute("action","/change_photo");
       form.setAttribute("enctype","multipart/form-data");
       
        selezionaemail.removeAttribute("required");
        selezionapassw.setAttribute("hidden", "");
        selezionapassw.removeAttribute("required");
        selezionaemail.setAttribute("hidden", "");
            
            selezionafoto.removeAttribute("hidden");
            selezionafoto.setAttribute("required","");
   }

     
       
</script>

</html>